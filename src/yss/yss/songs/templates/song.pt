<div metal:use-macro="main_template">

  <div metal:fill-slot="main_content" class="container">

    <div class="row">

      <div class="col-md-12">

        <div class="panel panel-default">
          <div class="panel-heading">
            <i>${title}</i> in the style of ${artist}
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <div metal:use-macro="layout.likes_macro"></div>
              </div>
              <div tal:condition="can_record" class="col-md-4">
                <button type="button"
                        class="btn btn-danger btn-md btn-block"
                        onclick="location.href='${request.resource_url(context, 'record')}'"
                        >Record This Song</button>
              </div>
              <div tal:condition="not: can_record" class="col-md-8">
              Log in to record this song
              </div>
            </div>

            <div class="row" tal:condition="len(recordings)">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    Recordings of this song
                  </div>
                  <div class="panel-body">
                    <table tal:condition="batch|None"
                           class="table table-striped table-condensed">

                      <tbody>
                        <tr tal:repeat="item recordings">
                          <td><img src="${layout.performer_thumb_url(item.performer)}" width="32"/></td>
                          <td>
                            <a href="${request.resource_url(item)}">${item.title}</a>
                          </td>
                          <td>${item.num_likes}</td>
                        </tr>
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>
            </div>

          </div>

          <div class="row"
               tal:condition="num_likes">
            <div class="col-md-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                Performers who like this song
                </div>
                <div class="panel-body">
                  <table class="table table-striped table-condensed">

                    <tbody>
                      <tr tal:repeat="item liked_by">
                        <td><img src="${layout.performer_thumb_url(item)}"/></td>
                        <td>
                          <a href="${request.resource_url(item)}">${item.title}</a>
                        </td>
                      </tr>
                    </tbody>
                  </table>

                </div>
              </div>
            </div>

          </div>

        </div>

      </div>
    </div>
  </div>
  <div metal:fill-slot="tail">
    <script type="text/javascript"
            src="${layout.static('js/likes.js')}"></script>
    <script type="text/javascript">
     liker();
    </script>
  </div>
</div>
