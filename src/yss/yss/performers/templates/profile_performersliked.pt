<div metal:use-macro="main_template">

  <div metal:fill-slot="main_content" class="container">

    <div class="row">
      <div class="col-md-12">
        <div metal:use-macro="layout.profile_header_macro"></div>
      </div>
    </div>

    <div class="row" tal:condition="divulge_performer_likes">
      <div class="col-md-12">

        <div class="panel-heading">
          Likes Performers
        </div>
        <div class="panel-body">
          <table tal:condition="likes_performers"
                 class="table table-striped table-condensed">

            <thead>
              <tr>
                <th width="80%">
                   Name
                </th>
                <th width="20%">
                   Likes
                </th>
              </tr>
            </thead>

            <tbody>
              <tr tal:repeat="item likes_performers">
                <td>
                  <a href="${request.resource_url(item)}">${item.__name__}</a>
                </td>
                <td>${item.num_likes}</td>
              </tr>
            </tbody>
          </table>
          <div style="padding-top: 10px;"
               tal:condition="not likes_performers">
             No performers liked.
          </div>
        </div>
      </div>

    </div>
  </div>


</div>
