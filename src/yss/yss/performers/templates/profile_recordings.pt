<div metal:use-macro="main_template">

  <div metal:fill-slot="main_content" class="container">

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div style="float:right">
              <img src="${layout.performer_photo_url(context)}" height="40" width="40"/>
            </div>
            <p style="float: right; padding-right: 2em">
              <span tal:condition="age and divulge_age">${age} - </span>

              <span tal:condition="sex and divulge_sex">${sex} - </span>

              <span tal:condition="location and divulge_location">${location} - </span>

              <span tal:condition="genre and divulge_genre">${genre}</span>
            </p>
            <h3>${name}</h3>
            <h2 tal:condition="title and divulge_realname">${title}</h2>
          </div>
        </div>
        <div class="panel-body">
          Likes: <span id="like-count">${num_likes}</span>
          <tal:if tal:condition="layout.can_like(context)">
            <a id="like-button" href="@@like" style="padding-left: 10px;"
               ><i class="glyphicon glyphicon-thumbs-up"> </i></a>
            <script type="text/javascript">
             $("#like-button").click(function () {
               $.ajax('@@like')
                    .success(function(data) {
                 var counter = $('#like-count'),
                 thumb = $('#like-button');
                 counter.text(data['num_likes']);
                 thumb.hide();
               })
                      .fail(function() {
                 alert('Failed to add like');
               });
               return false;
             });
            </script>
          </tal:if>

        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel-heading">
          Recent Recordings
        </div>
        <div class="panel-body">
          <table tal:condition="recent_recordings"
                 class="table table-striped table-condensed">

            <thead>
              <tr>
                <th width="25%">
                   Original Artist
                </th>
                <th width="25%">
                   Title
                </th>
                <th width="20%">
                   Genre
                </th>
                <th width="15%">
                   Likes
                </th>
                <th width="20%">
                   Recorded
                </th>
              </tr>
            </thead>

            <tbody>
              <tr tal:repeat="item recent_recordings">
                <td>${item.song.artist}</td>
                <td>
                  <a href="${request.resource_url(item.song)}">${item.song.title}</a>
                </td>
                <td>${item.song.genre or 'Unknown'}</td>
                <td>${item.num_likes}</td>
                <td><a href="${request.resource_url(item)}">${layout.short_created_local(item)}</a></td>
              </tr>
            </tbody>
          </table>
          <div style="padding-top: 10px;"
               tal:condition="not recent_recordings">
             No recordings found.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
