<div metal:use-macro="main_template">

  <div metal:fill-slot="main_content" class="container">

    <div class="row">
      <div class="col-md-12">
        <div metal:use-macro="layout.profile_header_macro"></div>
      </div>
    </div>

    <div class="row" style="margin-bottom: 10px;">
      <div class="col-md-12">
        <div tal:condition="batch"
             metal:use-macro="layout.batching_macro"></div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <form action="${request.resource_url(context, '@@recordings')}" method="GET">
            <label for="filter_text">Search</label>
            <input class="form-control" name="filter_text" value="${filter_text|''}"/>
            <table tal:condition="batch|None"
                   class="table table-striped table-condensed">

              <thead>
                <tr>
                  <th width="15%">
                    ${structure:view.sort_tag('created', 'Created')}
                  </th>
                  <th width="45%">
                    ${structure:view.sort_tag('title', 'Song')}
                  </th>
                  <th width="10%">
                    ${structure:view.sort_tag('genre', 'Genre')}
                  </th>
                  <th width="10%">
                    ${structure:view.sort_tag('num_likes', 'Likes')}
                  </th>
                  <th width="10%" tal:condition="view.has_edit_permission">
                    ${structure:view.sort_tag('visibility', 'Visibility')}
                  </th>
                </tr>
              </thead>

              <tbody>
                <tr tal:repeat="item batch">
                  <td>
                    <a href="${request.resource_url(item)}">${layout.short_created_local(item)}</a>
                  </td>
                  <td>
                    <a href="${request.resource_url(item.song)}">${item.song.title} (${item.song.artist})</a>
                  </td>
                  <td>${item.genre or 'Unknown'}</td>
                  <td>${item.num_likes}</td>
                  <td tal:condition="view.has_edit_permission">
                    ${view.visibility_state(item)}
                  </td>
                </tr>
              </tbody>
            </table>
            <div style="padding-top: 10px;"
                 tal:condition="not batch">
             No recordings found.
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
